<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft">
    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/primary_button"
        android:id="@+id/manageMenuItems"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_text_size"
        android:text="@string/manageMenuItemsButton" />
    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/primary_button"
        android:id="@+id/viewDeliveryArea"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_text_size"
        android:text="@string/viewDeliveryAreaButton" />
    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/primary_button"
        android:id="@+id/viewSales"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_text_size"
        android:text="@string/viewSalesButton" />
    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/primary_button"
        android:id="@+id/manageDrivers"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_text_size"
        android:text="@string/manageDriversButton"/>
    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/primary_button"
        android:id="@+id/rateDrivers"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_text_size"
        android:text="@string/rateDriversButton"/>
    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/primary_button"
        android:id="@+id/deliveryHours"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_text_size"
        android:text="@string/deliveryHours"/>


</LinearLayout>