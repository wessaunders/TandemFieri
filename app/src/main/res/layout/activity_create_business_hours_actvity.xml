<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_business_hours_actvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gmail.dleemcewen.tandemfieri.CreateDeliveryHoursActivity">

    <TextView
        android:text="@string/deliveryHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Select the days your business delivers to set the hours."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructions"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/instructions">
    <LinearLayout
        android:id="@+id/SundayGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <CheckBox
            android:text="Sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boxSunday"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/sunG"
            tools:gravity="center_vertical">

            <TextView
                android:id="@+id/textView1"
                android:text="Open:"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/SunOpenTime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                />
            <TextView
                android:id="@+id/textView2"
                android:text="Closed:"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/SunClosedTime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MondayGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <CheckBox
            android:text="Monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boxMonday"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/monG"
            tools:gravity="center_vertical">
            <TextView
                android:id="@+id/textView3"
                android:text="Open:"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/MonOpenTime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            <TextView
                android:id="@+id/textView4"
                android:text="Closed:"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/MonClosedTime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TuesdayGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <CheckBox
            android:text="Tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boxTuesday"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/tueG"
            tools:gravity="center_vertical">
            <TextView
                android:id="@+id/textView5"
                android:text="Open:"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/TueOpenTime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            <TextView
                android:id="@+id/textView6"
                android:text="Closed:"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/TueClosedTime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>
    </LinearLayout>

            <LinearLayout
                android:id="@+id/WedGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <CheckBox
                    android:text="Wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/boxWed"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/wedG"
                    tools:gravity="center_vertical">
                    <TextView
                        android:id="@+id/textView7"
                        android:text="Open:"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/WedOpenTime"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    <TextView
                        android:id="@+id/textView8"
                        android:text="Closed:"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/WedClosedTime"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                </LinearLayout>
            </LinearLayout>

              <LinearLayout
                  android:id="@+id/ThursdayGroup"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="1">
                  <CheckBox
                      android:text="Thursday"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/boxThursday"
                      android:layout_weight="1"/>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:id="@+id/ThurG"
                      tools:gravity="center_vertical">
                      <TextView
                          android:id="@+id/textView9"
                          android:text="Open:"
                          android:layout_width="50dp"
                          android:layout_height="wrap_content" />
                      <TextView
                          android:id="@+id/ThurOpenTime"
                          android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:layout_weight="1"
                          android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                      <TextView
                          android:id="@+id/textView10"
                          android:text="Closed:"
                          android:layout_width="50dp"
                          android:layout_height="wrap_content" />
                      <TextView
                          android:id="@+id/ThurClosedTime"
                          android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:layout_weight="1"
                          android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                  </LinearLayout>
              </LinearLayout>

                 <LinearLayout
                     android:id="@+id/FridayGroup"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical"
                     android:layout_weight="1">
                     <CheckBox
                         android:text="Friday"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/boxFriday"
                         android:layout_weight="1"/>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:layout_weight="1"
                         android:id="@+id/FriG"
                         tools:gravity="center_vertical">
                         <TextView
                             android:id="@+id/textView11"
                             android:text="Open:"
                             android:layout_width="50dp"
                             android:layout_height="wrap_content" />
                         <TextView
                             android:id="@+id/FriOpenTime"
                             android:layout_width="50dp"
                             android:layout_height="50dp"
                             android:layout_weight="1"
                             android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                         <TextView
                             android:id="@+id/textView12"
                             android:text="Closed:"
                             android:layout_width="50dp"
                             android:layout_height="wrap_content" />
                         <TextView
                             android:id="@+id/FriClosedTime"
                             android:layout_width="50dp"
                             android:layout_height="50dp"
                             android:layout_weight="1"
                             android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                     </LinearLayout>
                 </LinearLayout>

                 <LinearLayout
                     android:id="@+id/SaturdayGroup"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical"
                     android:layout_weight="1">
                     <CheckBox
                         android:text="Saturday"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/boxSaturday"
                         android:layout_weight="1"/>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:layout_weight="1"
                         android:id="@+id/SatG"
                         tools:gravity="center_vertical">
                         <TextView
                             android:id="@+id/textView15"
                             android:text="Open:"
                             android:layout_width="50dp"
                             android:layout_height="wrap_content" />

                         <TextView
                             android:id="@+id/SatOpenTime"
                             android:layout_width="50dp"
                             android:layout_height="50dp"
                             android:layout_weight="1"
                             android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                         <TextView
                             android:id="@+id/textView16"
                             android:text="Closed:"
                             android:layout_width="50dp"
                             android:layout_height="wrap_content" />
                         <TextView
                             android:id="@+id/SatClosedTime"
                             android:layout_width="50dp"
                             android:layout_height="50dp"
                             android:layout_weight="1"
                             android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                     </LinearLayout>
                 </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
